<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="false">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/motor_input_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <include
            android:id="@+id/motor1"
            layout="@layout/item_motor_setting" />

        <include
            android:id="@+id/motor2"
            layout="@layout/item_motor_setting" />

        <include
            android:id="@+id/motor3"
            layout="@layout/item_motor_setting" />

        <include
            android:id="@+id/motor4"
            layout="@layout/item_motor_setting" />

        <include
            android:id="@+id/motor5"
            layout="@layout/item_motor_setting" />

        <include
            android:id="@+id/motor6"
            layout="@layout/item_motor_setting" />

        <include
            android:id="@+id/motor_all"
            layout="@layout/item_motor_setting" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/status_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/motor_input_layout"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:text="connection_status"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/received_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/connection_status"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="received_message"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sent_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/received_message"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="sent_message"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/stop_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>